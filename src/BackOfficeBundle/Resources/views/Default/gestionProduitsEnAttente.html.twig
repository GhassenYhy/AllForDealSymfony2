{% extends 'BackOfficeBundle::layout.html.twig' %}
{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Gestion produits
                <small>Produits en attente</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Gestion produits</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <table id="myTable">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Libelle</th>
                                    <th>membre</th>
                                    <th>prix</th>
                                    <th>stock</th>
                                    <th>categorie</th>
                                    <th>date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Image</th>
                                    <th>Libelle</th>
                                    <th>membre</th>
                                    <th>prix</th>
                                    <th>stock</th>
                                    <th>categorie</th>
                                    <th>date</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                {% for product in products %}
                                    <tr>
                                        <td><img src="{{ product.image }}" height="50" width="50"></td>
                                        <td>{{ product.libelle }}</td>
                                        <td>{{ product.idmembre }}</td>
                                        <td>{{product.prix}} - <b>{{product.reduction}}%</b> = {{product.prixNew}} DT</td>
                                        <td>{{product.stock }}</td>
                                        <td>{{product.idcategorie}}</td>
                                        <td>{{product.date|date("d-m-Y")}}</td>
                                        <td>
                                            <div class="btn-group">
                                                <a type="button" class="btn btn-success" href="{{path('accepte_produit',{'id':product.id})}}">Accepte</a>
                                                <a type="button" class="btn btn-danger" href="{{path('refuse_produit',{'id':product.id})}}">Refuse</a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>    
                    </div>
                    <!-- /.box -->
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}
{% block javascript %}
    <script>
        $(document).ready(function () {

            $('#myTable').DataTable();
        });
    </script>
{% endblock %}