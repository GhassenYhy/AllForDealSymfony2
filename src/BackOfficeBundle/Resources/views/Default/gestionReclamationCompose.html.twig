{% extends 'BackOfficeBundle::layout.html.twig' %}
{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Gestion des Reclamations
                <small>compose reponse</small>
            </h1>

            <ol class="breadcrumb">

                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Compose Reponse</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box box-primary">
                        <form method="post" action="{{path('envoi_mail')}}">
                        <div class="box-header with-border">
                            <h3 class="box-title">Composer une reponse</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="form-group">
                                <input required type="email" name="email" class="form-control" placeholder="To:" value="{% if email is defined %}{{ email }} {% endif %}" >
                            </div>
                            <div class="form-group">
                                
                                    
                                <input  name="subject" required class="form-control" placeholder="Subject:" value="{% if subject is defined %}{{ subject }} {% endif %}">
                                
                            </div>
                            <div class="form-group">
                                <textarea name="body" id="compose-textarea" class="form-control" style="height: 300px">
                      
                                </textarea>
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Enoyer</button>
                            </div>
                        </div>
                        <!-- /.box-footer -->
                        </form>
                    </div>
                </div>


            </div>

        </section>
        <!-- /.content -->
    </div>

    <!-- /.content-wrapper -->
{% endblock %}
{% block javascript %}
    <script>
        $(document).ready(function () {
            $("#compose-textarea").wysihtml5();
        });

    </script>

{% endblock %}