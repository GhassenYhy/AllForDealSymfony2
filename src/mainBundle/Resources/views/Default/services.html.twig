{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    <script>
        $(document).ready(function () {

            $('#prod').change(function () {

                if ($(this).val() === '1') {
                   
                    $('#changeService').hide();
                    $('#changeProduit').show();
                     $('#cats').hide();
                    $('#catp').show();

                }

                if ($('#prod').val() === '2') {
                    $('#changeService').show();
                    $('#changeProduit').hide();
                    $('#cats').show();
                    $('#catp').hide();

                }


            });
        });
    </script>
{% endblock %}