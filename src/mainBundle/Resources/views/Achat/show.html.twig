{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Achat</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Idmembre</th>
                <td>{{ entity.idmembre }}</td>
            </tr>
            <tr>
                <th>Produits</th>
                <td>{{ entity.produits }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ entity.total }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('achat') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('achat_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
